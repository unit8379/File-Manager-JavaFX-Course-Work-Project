<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="center" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="glebi.javafx.filemanager.MainController">
    <MenuBar>
        <Menu text="Файл">
            <MenuItem text="Выйти из программы" onAction="#btnExitAction"/>
        </Menu>
        <Menu text="Доп. функционал">
            <MenuItem text="Всплывающее окно (новый процесс)" onAction="#itemNewProcessAction"/>
        </Menu>
        <Menu text="Встроенные утилиты">
            <MenuItem text="Калькулятор" onAction="#itemOpenCalculatorAction"/>
            <MenuItem text="Календарь" onAction="#itemOpenCalendarAction"/>
            <MenuItem text="Системный монитор" onAction="#itemOpenSystemMonitorAction"/>
        </Menu>
    </MenuBar>
    <HBox VBox.vgrow="ALWAYS">
        <fx:include HBox.hgrow="ALWAYS" fx:id="leftPanel" source="panel.fxml"/>
        <fx:include HBox.hgrow="ALWAYS" fx:id="rightPanel" source="panel.fxml"/>
    </HBox>
    <HBox spacing="5">
        <Button maxWidth="Infinity" focusTraversable="false" text="Копировать файл" HBox.hgrow="ALWAYS" onAction="#btnCopyAction"/>
        <Button maxWidth="Infinity" focusTraversable="false" text="Переместить файл" HBox.hgrow="ALWAYS" onAction="#btnMoveAction"/>
        <Button maxWidth="Infinity" focusTraversable="false" text="Удалить файл" HBox.hgrow="ALWAYS" onAction="#btnDeleteAction"/>
        <Button maxWidth="Infinity" focusTraversable="false" text="Выход из программы" HBox.hgrow="ALWAYS" onAction="#btnExitAction"/>
      <padding>
         <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
      </padding>
    </HBox>
</VBox>
